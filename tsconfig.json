{
    "compilerOptions": {
        "allowJs": false,
        "outDir": "./Build",
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "ES2020",
        "lib": [ "ES2020" ],
        "types": [ "node" ],
        "strict": true,
        "alwaysStrict": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "emitDeclarationOnly": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "isolatedModules": true
    },
    "include": [
        "Src"
    ],
    "exclude": [
        "Build",
        "Tests",
        "node_modules"
    ]
}